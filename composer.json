{
    "name": "msgphp/msgphp",
    "description": "Combined MsgPHP package for CI purposes",
    "replace": {
        "msgphp/domain": "*",
        "msgphp/eav": "*",
        "msgphp/eav-bundle": "*",
        "msgphp/user": "*",
        "msgphp/user-bundle": "*",
        "msgphp/user-eav": "*"
    },
    "require-dev": {
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "merge-plugin": {
            "require": [
                "src/*/composer.json"
            ],
            "recurse": false
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MsgPhp\\": "src/"
        },
        "classmap": [
            "tests/sa/rules/phpstan"
        ]
    },
    "minimum-stability": "dev"
}
