#!/usr/bin/env bash

[[ $# -lt 1 ]] && echo "Usage: $0 <package-name/dir> [<arguments>]" && exit 1

VERSION="7.5"
BASE_DIR="$(cd $(dirname $(dirname "$0")) && pwd)"

if [[ -d $1 ]]; then
    PACKAGE_DIR="$(cd "$1" && pwd)"
else
    PACKAGE_DIR="${BASE_DIR}/src/$(echo "$1" | sed -r 's/(^|-)(\w)/\U\2/g')"
fi
shift;

[[ ! -f "${PACKAGE_DIR}/phpunit.xml.dist" ]] && "No valid package found in \"${PACKAGE_DIR}\"" && exit 1

BIN="vendor/bin/simple-phpunit"

if [[ ! -f "${PACKAGE_DIR}/${BIN}" ]]; then
    composer install --prefer-dist --quiet --working-dir="${PACKAGE_DIR}"
    [[ $? -ne 0 ]] && exit 1
fi

if [[ ! ${TRAVIS} ]]; then
    composer link -h &> /dev/null
    if [[ $? -ne 0 ]]; then
        composer install --prefer-dist --quiet --working-dir="${BASE_DIR}"
        [[ $? -ne 0 ]] && exit 1
    fi

    composer link "${PACKAGE_DIR}" --working-dir="${BASE_DIR}"
    [[ $? -ne 0 ]] && exit 1
fi

pushd "${PACKAGE_DIR}" &> /dev/null

bash -xc "SYMFONY_PHPUNIT_VERSION=${VERSION} ${BIN} ${@}" 2>&1
[[ $? -ne 0 ]] && exit 1

popd &> /dev/null
